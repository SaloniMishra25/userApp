<%- include("include/header", { title: "All Users" }) %>

<div class="page-header">
    <a href="/" class="btn">Back Home</a>
    <h2>All Users</h2>
</div>

<table class="user-table">
    <tr>
        <th>ID</th>
        <th>Username</th>
        <th>Email</th>
        <th>Edit</th>
    </tr>

    <% users.forEach(user => { %>
        <tr>
            <td><%= user.id %></td>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
            <td>
                <a href="/users/<%= user.id %>/edit" class="btn btn-small">Edit</a>
            </td>
        </tr>
    <% }) %>
</table>

<%- include("include/footer") %>
